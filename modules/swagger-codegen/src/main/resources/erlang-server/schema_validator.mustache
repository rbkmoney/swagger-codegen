test_validate(Value, DefName, SchemaKey) ->
    JsonValue = jsx:decode(Value, [return_maps]),
    case validate(JsonValue, DefName, SchemaKey) of
        ok             -> ok;
        {error, Error} -> Error
    end.

expect(Error, Path) ->
    [map_error_reason({data_invalid, undefined, Error, undefined, Path})].

