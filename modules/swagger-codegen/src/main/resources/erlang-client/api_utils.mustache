-module(swagger_api_utils).

-define(CAPI_HOST, "0.0.0.0").
-define(CAPI_PORT, 8080).

-type url() :: hackney:hackney_url().

-export([get_url/1]).
-export([fill_url/2]).

-spec get_url(Path::string()) -> url().
get_url(Path) ->
    ?CAPI_HOST ++ ":" ++ integer_to_list(?CAPI_PORT)  ++ Path.

-spec fill_url(Url::string(), Params::term()) -> url().
fill_url(Url, Params) ->
    Fun = fun(K, V, AccIn) -> re:replace(AccIn, K, V, [{return, list}]) end,
    maps:fold(Fun, Url, Params).
